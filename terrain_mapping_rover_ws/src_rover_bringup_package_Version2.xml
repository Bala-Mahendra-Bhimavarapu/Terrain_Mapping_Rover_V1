<?xml version="1.0"?>
<? xml-model href="http://download.ros.org/schema/package_format3.xsd" schematypens="http://www.w3.org/2001/XMLSchema"?>
<package format="3">
  <name>rover_bringup</name>
  <version>1.0.0</version>
  <description>Launch files and configuration for lunar rover system</description>
  <maintainer email="rover@example.com">Rover Team</maintainer>
  <license>MIT</license>

  <buildtool_depend>ament_cmake</buildtool_depend>

  <!-- ============== CORE PACKAGES ============== -->
  <exec_depend>rover_interfaces</exec_depend>
  <exec_depend>rover_description</exec_depend>
  
  <!-- ============== SENSOR DRIVERS ============== -->
  <exec_depend>vex_serial</exec_depend>
  <exec_depend>imu_driver</exec_depend>
  <exec_depend>imx500_camera</exec_depend>
  <exec_depend>arducam_tof</exec_depend>
  
  <!-- ============== SENSOR FUSION ============== -->
  <exec_depend>sensor_fusion</exec_depend>
  <exec_depend>robot_localization</exec_depend>
  
  <!-- ============== SLAM ============== -->
  <exec_depend>rtabmap_ros</exec_depend>
  <exec_depend>rtabmap_slam</exec_depend>
  <exec_depend>rtabmap_viz</exec_depend>
  <exec_depend>rtabmap_odom</exec_depend>
  
  <!-- ============== NAVIGATION ============== -->
  <exec_depend>nav2_bringup</exec_depend>
  <exec_depend>nav2_bt_navigator</exec_depend>
  <exec_depend>nav2_controller</exec_depend>
  <exec_depend>nav2_planner</exec_depend>
  <exec_depend>nav2_behaviors</exec_depend>
  <exec_depend>nav2_costmap_2d</exec_depend>
  <exec_depend>nav2_waypoint_follower</exec_depend>
  <exec_depend>nav2_velocity_smoother</exec_depend>
  <exec_depend>nav2_lifecycle_manager</exec_depend>
  <exec_depend>nav2_map_server</exec_depend>
  <exec_depend>nav2_amcl</exec_depend>
  
  <!-- ============== PERCEPTION ============== -->
  <exec_depend>auto_exposure</exec_depend>
  <exec_depend>landmark_system</exec_depend>
  
  <!-- ============== MISSION MANAGEMENT ============== -->
  <exec_depend>mission_health</exec_depend>
  <exec_depend>waypoint_manager</exec_depend>
  
  <!-- ============== TELEOP ============== -->
  <exec_depend>rover_teleop</exec_depend>
  
  <!-- ============== UTILITIES ============== -->
  <exec_depend>rover_streaming</exec_depend>
  <exec_depend>web_dashboard</exec_depend>
  <exec_depend>bluetooth_nav</exec_depend>
  <exec_depend>calibration_tools</exec_depend>
  
  <!-- ============== ROS 2 CORE ============== -->
  <exec_depend>rclpy</exec_depend>
  <exec_depend>std_msgs</exec_depend>
  <exec_depend>geometry_msgs</exec_depend>
  <exec_depend>nav_msgs</exec_depend>
  <exec_depend>sensor_msgs</exec_depend>
  <exec_depend>tf2</exec_depend>
  <exec_depend>tf2_ros</exec_depend>
  <exec_depend>tf2_tools</exec_depend>
  
  <!-- ============== VISUALIZATION ============== -->
  <exec_depend>rviz2</exec_depend>
  <exec_depend>rviz_default_plugins</exec_depend>
  
  <!-- ============== LAUNCH ============== -->
  <exec_depend>launch</exec_depend>
  <exec_depend>launch_ros</exec_depend>

  <export>
    <build_type>ament_cmake</build_type>
  </export>
</package>