<?xml version="1.0"?>
<? xml-model href="http://download.ros.org/schema/package_format3.xsd" schematypens="http://www.w3.org/2001/XMLSchema"?>
<package format="3">
  <name>tmr_slam</name>
  <version>1.0.0</version>
  <description>RTAB-MAP SLAM package for Terrain Mapping Rover - optimized for low-texture lunar terrain</description>
  <maintainer email="user@todo.todo">Bala</maintainer>
  <license>MIT</license>

  <buildtool_depend>ament_cmake</buildtool_depend>
  <buildtool_depend>ament_cmake_python</buildtool_depend>

  <!-- Core dependencies -->
  <depend>rclpy</depend>
  <depend>rclcpp</depend>
  <depend>std_msgs</depend>
  <depend>geometry_msgs</depend>
  <depend>nav_msgs</depend>
  <depend>sensor_msgs</depend>
  <depend>visualization_msgs</depend>

  <!-- TF -->
  <depend>tf2</depend>
  <depend>tf2_ros</depend>
  <depend>tf2_geometry_msgs</depend>

  <!-- RTAB-MAP -->
  <depend>rtabmap_ros</depend>
  <depend>rtabmap_msgs</depend>
  <depend>rtabmap_conversions</depend>
  <depend>rtabmap_util</depend>
  <depend>rtabmap_slam</depend>
  <depend>rtabmap_viz</depend>

  <!-- Image processing -->
  <depend>image_transport</depend>
  <depend>cv_bridge</depend>
  <depend>image_geometry</depend>

  <!-- Point cloud -->
  <depend>pcl_conversions</depend>
  <depend>pcl_ros</depend>

  <!-- Launch -->
  <exec_depend>launch</exec_depend>
  <exec_depend>launch_ros</exec_depend>

  <!-- TMR packages -->
  <exec_depend>tmr_description</exec_depend>
  <exec_depend>tmr_localization</exec_depend>
  <exec_depend>tmr_msgs</exec_depend>

  <!-- Visualization -->
  <exec_depend>rviz2</exec_depend>

  <!-- Test dependencies -->
  <test_depend>ament_lint_auto</test_depend>
  <test_depend>ament_lint_common</test_depend>
  <test_depend>python3-pytest</test_depend>

  <export>
    <build_type>ament_cmake</build_type>
  </export>
</package>