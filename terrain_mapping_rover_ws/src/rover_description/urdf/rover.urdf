<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro" name="lunar_rover">
  
  <!-- Include sensor and property definitions -->
  <xacro: include filename="$(find rover_description)/urdf/properties.urdf.xacro"/>
  <xacro:include filename="$(find rover_description)/urdf/materials.urdf.xacro"/>
  <xacro:include filename="$(find rover_description)/urdf/sensors.urdf.xacro"/>

  <!-- ==================== BASE LINK ==================== -->
  <!-- Center of chassis, 2 inches (0.0508m) above ground, at axle center -->
  <link name="base_link">
    <visual>
      <geometry>
        <box size="${chassis_length} ${chassis_width} ${chassis_height}"/>
      </geometry>
      <material name="dark_gray"/>
    </visual>
    <collision>
      <geometry>
        <box size="${chassis_length} ${chassis_width} ${chassis_height}"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="${rover_mass}"/>
      <inertia ixx="0.1" ixy="0" ixz="0" iyy="0.1" iyz="0" izz="0.1"/>
    </inertial>
  </link>

  <!-- ==================== FOOTPRINT (for Nav2) ==================== -->
  <link name="base_footprint"/>
  
  <joint name="base_footprint_joint" type="fixed">
    <parent link="base_footprint"/>
    <child link="base_link"/>
    <origin xyz="0 0 ${base_link_height}" rpy="0 0 0"/>
  </joint>

  <!-- ==================== WHEELS ==================== -->
  <xacro:macro name="wheel" params="name x_pos y_pos">
    <link name="${name}_wheel">
      <visual>
        <geometry>
          <cylinder radius="${wheel_radius}" length="${wheel_width}"/>
        </geometry>
        <material name="black"/>
      </visual>
      <collision>
        <geometry>
          <cylinder radius="${wheel_radius}" length="${wheel_width}"/>
        </geometry>
      </collision>
      <inertial>
        <mass value="${wheel_mass}"/>
        <inertia ixx="0.001" ixy="0" ixz="0" iyy="0.001" iyz="0" izz="0.001"/>
      </inertial>
    </link>
    
    <joint name="${name}_wheel_joint" type="continuous">
      <parent link="base_link"/>
      <child link="${name}_wheel"/>
      <origin xyz="${x_pos} ${y_pos} ${-base_link_height + wheel_radius}" rpy="${-pi/2} 0 0"/>
      <axis xyz="0 0 1"/>
    </joint>
  </xacro:macro>

  <!-- Create four wheels -->
  <xacro:wheel name="front_left" x_pos="${wheelbase/2}" y_pos="${track_width/2}"/>
  <xacro:wheel name="front_right" x_pos="${wheelbase/2}" y_pos="${-track_width/2}"/>
  <xacro:wheel name="rear_left" x_pos="${-wheelbase/2}" y_pos="${track_width/2}"/>
  <xacro:wheel name="rear_right" x_pos="${-wheelbase/2}" y_pos="${-track_width/2}"/>

  <!-- ==================== SENSORS ==================== -->
  <!-- IMX500 Camera -->
  <xacro: imx500_camera/>
  
  <!-- Arducam ToF -->
  <xacro:arducam_tof/>
  
  <!-- MPU6050 IMU -->
  <xacro:mpu6050_imu/>

</robot>
