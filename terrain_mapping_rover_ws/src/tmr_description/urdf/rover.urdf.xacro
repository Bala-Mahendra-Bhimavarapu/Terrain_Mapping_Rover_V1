<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro" name="terrain_mapping_rover">
  
  <!-- ===================================================================== -->
  <!-- XACRO ARGUMENTS - Can be overridden via launch file                   -->
  <!-- ===================================================================== -->
  
  <!-- Camera position arguments -->
  <xacro:arg name="camera_x" default="0.13"/>
  <xacro:arg name="camera_y" default="-0.0275"/>
  <xacro:arg name="camera_z" default="0.078"/>
  <xacro:arg name="camera_roll" default="0.0"/>
  <xacro:arg name="camera_pitch" default="-0.2751"/>
  <xacro:arg name="camera_yaw" default="0.0"/>
  
  <!-- ToF position arguments -->
  <xacro:arg name="tof_x" default="0.13"/>
  <xacro:arg name="tof_y" default="0.014"/>
  <xacro:arg name="tof_z" default="0.078"/>
  <xacro:arg name="tof_roll" default="0.0"/>
  <xacro: arg name="tof_pitch" default="-0.2751"/>
  <xacro:arg name="tof_yaw" default="0.0"/>
  
  <!-- IMU position arguments -->
  <xacro:arg name="imu_x" default="0.0"/>
  <xacro: arg name="imu_y" default="0.0"/>
  <xacro:arg name="imu_z" default="0.046"/>
  <xacro:arg name="imu_roll" default="0.0"/>
  <xacro:arg name="imu_pitch" default="0.0"/>
  <xacro:arg name="imu_yaw" default="0.0"/>
  
  <!-- ===================================================================== -->
  <!-- ROBOT PARAMETERS                                                       -->
  <!-- ===================================================================== -->
  
  <!-- PI constant -->
  <xacro: property name="pi" value="3.14159265359"/>
  
  <!-- Rover body dimensions -->
  <xacro: property name="rover_length" value="0.26"/>
  <xacro: property name="rover_width" value="0.26"/>
  <xacro:property name="rover_height" value="0.045"/>
  
  <!-- Wheel parameters -->
  <xacro: property name="wheel_radius" value="0.0508"/>
  <xacro: property name="wheel_width" value="0.0275"/>
  <xacro: property name="track_width" value="0.295"/>
  <xacro: property name="wheelbase" value="0.167"/>
  
  <!-- Base link height (2 inches above ground) -->
  <xacro:property name="base_link_height" value="0.0508"/>
  
  <!-- Sensor positions from arguments -->
  <xacro: property name="camera_x" value="$(arg camera_x)"/>
  <xacro:property name="camera_y" value="$(arg camera_y)"/>
  <xacro:property name="camera_z" value="$(arg camera_z)"/>
  <xacro:property name="camera_roll" value="$(arg camera_roll)"/>
  <xacro:property name="camera_pitch" value="$(arg camera_pitch)"/>
  <xacro:property name="camera_yaw" value="$(arg camera_yaw)"/>
  
  <xacro:property name="tof_x" value="$(arg tof_x)"/>
  <xacro:property name="tof_y" value="$(arg tof_y)"/>
  <xacro:property name="tof_z" value="$(arg tof_z)"/>
  <xacro:property name="tof_roll" value="$(arg tof_roll)"/>
  <xacro: property name="tof_pitch" value="$(arg tof_pitch)"/>
  <xacro:property name="tof_yaw" value="$(arg tof_yaw)"/>
  
  <xacro:property name="imu_x" value="$(arg imu_x)"/>
  <xacro:property name="imu_y" value="$(arg imu_y)"/>
  <xacro: property name="imu_z" value="$(arg imu_z)"/>
  <xacro:property name="imu_roll" value="$(arg imu_roll)"/>
  <xacro:property name="imu_pitch" value="$(arg imu_pitch)"/>
  <xacro:property name="imu_yaw" value="$(arg imu_yaw)"/>
  
  <!-- ===================================================================== -->
  <!-- MATERIALS                                                              -->
  <!-- ===================================================================== -->
  
  <material name="dark_gray">
    <color rgba="0.3 0.3 0.3 1.0"/>
  </material>
  
  <material name="light_gray">
    <color rgba="0.6 0.6 0.6 1.0"/>
  </material>
  
  <material name="blue">
    <color rgba="0.0 0.0 0.8 1.0"/>
  </material>
  
  <material name="green">
    <color rgba="0.0 0.8 0.0 1.0"/>
  </material>
  
  <material name="red">
    <color rgba="0.8 0.0 0.0 1.0"/>
  </material>
  
  <material name="black">
    <color rgba="0.1 0.1 0.1 1.0"/>
  </material>
  
  <!-- ===================================================================== -->
  <!-- LINKS                                                                  -->
  <!-- ===================================================================== -->
  
  <!-- Base footprint - on the ground plane -->
  <link name="base_footprint">
    <visual>
      <geometry>
        <box size="0.01 0.01 0.001"/>
      </geometry>
      <material name="red"/>
    </visual>
  </link>
  
  <!-- Base link - center of robot -->
  <link name="base_link">
    <visual>
      <geometry>
        <box size="${rover_length} ${rover_width} ${rover_height}"/>
      </geometry>
      <origin xyz="0 0 ${rover_height/2}" rpy="0 0 0"/>
      <material name="dark_gray"/>
    </visual>
    <collision>
      <geometry>
        <box size="${rover_length} ${rover_width} ${rover_height}"/>
      </geometry>
      <origin xyz="0 0 ${rover_height/2}" rpy="0 0 0"/>
    </collision>
    <inertial>
      <mass value="5.0"/>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <inertia ixx="0.05" ixy="0" ixz="0" iyy="0.05" iyz="0" izz="0.05"/>
    </inertial>
  </link>
  
  <!-- Wheel macro -->
  <xacro:macro name="wheel_link" params="name">
    <link name="${name}">
      <visual>
        <geometry>
          <cylinder radius="${wheel_radius}" length="${wheel_width}"/>
        </geometry>
        <origin xyz="0 0 0" rpy="${pi/2} 0 0"/>
        <material name="black"/>
      </visual>
      <collision>
        <geometry>
          <cylinder radius="${wheel_radius}" length="${wheel_width}"/>
        </geometry>
        <origin xyz="0 0 0" rpy="${pi/2} 0 0"/>
      </collision>
    </link>
  </xacro:macro>
  
  <xacro:wheel_link name="front_left_wheel"/>
  <xacro:wheel_link name="front_right_wheel"/>
  <xacro:wheel_link name="back_left_wheel"/>
  <xacro:wheel_link name="back_right_wheel"/>
  
  <!-- Camera link (IMX500) -->
  <link name="camera_link">
    <visual>
      <geometry>
        <box size="0.009 0.025 0.024"/>
      </geometry>
      <material name="blue"/>
    </visual>
    <collision>
      <geometry>
        <box size="0.009 0.025 0.024"/>
      </geometry>
    </collision>
  </link>
  
  <!-- Camera optical frame -->
  <link name="camera_optical_frame"/>
  
  <!-- ToF camera link -->
  <link name="tof_link">
    <visual>
      <geometry>
        <box size="0.030 0.050 0.050"/>
      </geometry>
      <material name="green"/>
    </visual>
    <collision>
      <geometry>
        <box size="0.030 0.050 0.050"/>
      </geometry>
    </collision>
  </link>
  
  <!-- ToF optical frame -->
  <link name="tof_optical_frame"/>
  
  <!-- IMU link -->
  <link name="imu_link">
    <visual>
      <geometry>
        <box size="0.018 0.025 0.005"/>
      </geometry>
      <material name="red"/>
    </visual>
  </link>
  
  <!-- ===================================================================== -->
  <!-- JOINTS                                                                 -->
  <!-- ===================================================================== -->
  
  <!-- base_footprint to base_link -->
  <joint name="base_footprint_to_base_link" type="fixed">
    <parent link="base_footprint"/>
    <child link="base_link"/>
    <origin xyz="0 0 ${base_link_height}" rpy="0 0 0"/>
  </joint>
  
  <!-- Wheel joints -->
  <joint name="front_left_wheel_joint" type="fixed">
    <parent link="base_link"/>
    <child link="front_left_wheel"/>
    <origin xyz="${wheelbase/2} ${track_width/2} ${-base_link_height + wheel_radius}" rpy="0 0 0"/>
  </joint>
  
  <joint name="front_right_wheel_joint" type="fixed">
    <parent link="base_link"/>
    <child link="front_right_wheel"/>
    <origin xyz="${wheelbase/2} ${-track_width/2} ${-base_link_height + wheel_radius}" rpy="0 0 0"/>
  </joint>
  
  <joint name="back_left_wheel_joint" type="fixed">
    <parent link="base_link"/>
    <child link="back_left_wheel"/>
    <origin xyz="${-wheelbase/2} ${track_width/2} ${-base_link_height + wheel_radius}" rpy="0 0 0"/>
  </joint>
  
  <joint name="back_right_wheel_joint" type="fixed">
    <parent link="base_link"/>
    <child link="back_right_wheel"/>
    <origin xyz="${-wheelbase/2} ${-track_width/2} ${-base_link_height + wheel_radius}" rpy="0 0 0"/>
  </joint>
  
  <!-- Camera joint -->
  <joint name="base_link_to_camera" type="fixed">
    <parent link="base_link"/>
    <child link="camera_link"/>
    <origin xyz="${camera_x} ${camera_y} ${camera_z}" 
            rpy="${camera_roll} ${camera_pitch} ${camera_yaw}"/>
  </joint>
  
  <!-- Camera optical frame joint -->
  <joint name="camera_to_optical" type="fixed">
    <parent link="camera_link"/>
    <child link="camera_optical_frame"/>
    <origin xyz="0 0 0" rpy="${-pi/2} 0 ${-pi/2}"/>
  </joint>
  
  <!-- ToF joint -->
  <joint name="base_link_to_tof" type="fixed">
    <parent link="base_link"/>
    <child link="tof_link"/>
    <origin xyz="${tof_x} ${tof_y} ${tof_z}" 
            rpy="${tof_roll} ${tof_pitch} ${tof_yaw}"/>
  </joint>
  
  <!-- ToF optical frame joint -->
  <joint name="tof_to_optical" type="fixed">
    <parent link="tof_link"/>
    <child link="tof_optical_frame"/>
    <origin xyz="0 0 0" rpy="${-pi/2} 0 ${-pi/2}"/>
  </joint>
  
  <!-- IMU joint -->
  <joint name="base_link_to_imu" type="fixed">
    <parent link="base_link"/>
    <child link="imu_link"/>
    <origin xyz="${imu_x} ${imu_y} ${imu_z}" 
            rpy="${imu_roll} ${imu_pitch} ${imu_yaw}"/>
  </joint>

</robot>
