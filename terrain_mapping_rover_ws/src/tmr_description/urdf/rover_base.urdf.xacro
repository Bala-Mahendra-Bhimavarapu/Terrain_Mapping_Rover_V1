<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro">
  
  <!-- ===================================================================== -->
  <!-- FIXED PARAMETERS (not configurable at runtime)                        -->
  <!-- ===================================================================== -->
  
  <xacro:property name="pi" value="3.14159265359"/>
  
  <!-- Rover body -->
  <xacro:property name="rover_length" value="0.28"/>
  <xacro: property name="rover_width" value="0.36"/>
  <xacro: property name="rover_height" value="0.15"/>
  
  <!-- Wheels -->
  <xacro: property name="wheel_radius" value="0.0508"/>
  <xacro: property name="wheel_width" value="0.04"/>
  <xacro: property name="track_width" value="0.295"/>
  <xacro: property name="wheelbase" value="0.20"/>
  
  <!-- Base link height -->
  <xacro: property name="base_link_height" value="0.0508"/>
  
  <!-- ===================================================================== -->
  <!-- MATERIALS                                                              -->
  <!-- ===================================================================== -->
  
  <material name="dark_gray">
    <color rgba="0.3 0.3 0.3 1.0"/>
  </material>
  
  <material name="blue">
    <color rgba="0.0 0.0 0.8 1.0"/>
  </material>
  
  <material name="green">
    <color rgba="0.0 0.8 0.0 1.0"/>
  </material>
  
  <material name="red">
    <color rgba="0.8 0.0 0.0 1.0"/>
  </material>
  
  <material name="black">
    <color rgba="0.1 0.1 0.1 1.0"/>
  </material>
  
  <!-- ===================================================================== -->
  <!-- WHEEL MACRO                                                            -->
  <!-- ===================================================================== -->
  
  <xacro:macro name="wheel" params="name x y">
    <link name="${name}">
      <visual>
        <geometry>
          <cylinder radius="${wheel_radius}" length="${wheel_width}"/>
        </geometry>
        <origin xyz="0 0 0" rpy="${pi/2} 0 0"/>
        <material name="black"/>
      </visual>
      <collision>
        <geometry>
          <cylinder radius="${wheel_radius}" length="${wheel_width}"/>
        </geometry>
        <origin xyz="0 0 0" rpy="${pi/2} 0 0"/>
      </collision>
    </link>
    
    <joint name="${name}_joint" type="fixed">
      <parent link="base_link"/>
      <child link="${name}"/>
      <origin xyz="${x} ${y} ${-base_link_height + wheel_radius}" rpy="0 0 0"/>
    </joint>
  </xacro:macro>
  
  <!-- ===================================================================== -->
  <!-- LINKS                                                                  -->
  <!-- ===================================================================== -->
  
  <!-- Base footprint -->
  <link name="base_footprint"/>
  
  <!-- Base link -->
  <link name="base_link">
    <visual>
      <geometry>
        <box size="${rover_length} ${rover_width} ${rover_height}"/>
      </geometry>
      <origin xyz="0 0 ${rover_height/2}" rpy="0 0 0"/>
      <material name="dark_gray"/>
    </visual>
    <collision>
      <geometry>
        <box size="${rover_length} ${rover_width} ${rover_height}"/>
      </geometry>
      <origin xyz="0 0 ${rover_height/2}" rpy="0 0 0"/>
    </collision>
    <inertial>
      <mass value="5. 0"/>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <inertia ixx="0.05" ixy="0" ixz="0" iyy="0.05" iyz="0" izz="0.05"/>
    </inertial>
  </link>
  
  <!-- Camera link -->
  <link name="camera_link">
    <visual>
      <geometry>
        <box size="0.025 0.025 0.025"/>
      </geometry>
      <material name="blue"/>
    </visual>
  </link>
  
  <!-- Camera optical frame -->
  <link name="camera_optical_frame"/>
  
  <!-- ToF link -->
  <link name="tof_link">
    <visual>
      <geometry>
        <box size="0.02 0.035 0.02"/>
      </geometry>
      <material name="green"/>
    </visual>
  </link>
  
  <!-- ToF optical frame -->
  <link name="tof_optical_frame"/>
  
  <!-- IMU link -->
  <link name="imu_link">
    <visual>
      <geometry>
        <box size="0.02 0.016 0.003"/>
      </geometry>
      <material name="red"/>
    </visual>
  </link>
  
  <!-- ===================================================================== -->
  <!-- JOINTS                                                                 -->
  <!-- ===================================================================== -->
  
  <!-- base_footprint to base_link -->
  <joint name="base_footprint_to_base_link" type="fixed">
    <parent link="base_footprint"/>
    <child link="base_link"/>
    <origin xyz="0 0 ${base_link_height}" rpy="0 0 0"/>
  </joint>
  
  <!-- Wheels -->
  <xacro:wheel name="front_left_wheel" x="${wheelbase/2}" y="${track_width/2}"/>
  <xacro:wheel name="front_right_wheel" x="${wheelbase/2}" y="${-track_width/2}"/>
  <xacro:wheel name="back_left_wheel" x="${-wheelbase/2}" y="${track_width/2}"/>
  <xacro:wheel name="back_right_wheel" x="${-wheelbase/2}" y="${-track_width/2}"/>
  
  <!-- Camera -->
  <joint name="base_link_to_camera" type="fixed">
    <parent link="base_link"/>
    <child link="camera_link"/>
    <origin xyz="${camera_x} ${camera_y} ${camera_z}" 
            rpy="${camera_roll} ${camera_pitch} ${camera_yaw}"/>
  </joint>
  
  <joint name="camera_to_optical" type="fixed">
    <parent link="camera_link"/>
    <child link="camera_optical_frame"/>
    <origin xyz="0 0 0" rpy="${-pi/2} 0 ${-pi/2}"/>
  </joint>
  
  <!-- ToF -->
  <joint name="base_link_to_tof" type="fixed">
    <parent link="base_link"/>
    <child link="tof_link"/>
    <origin xyz="${tof_x} ${tof_y} ${tof_z}" 
            rpy="${tof_roll} ${tof_pitch} ${tof_yaw}"/>
  </joint>
  
  <joint name="tof_to_optical" type="fixed">
    <parent link="tof_link"/>
    <child link="tof_optical_frame"/>
    <origin xyz="0 0 0" rpy="${-pi/2} 0 ${-pi/2}"/>
  </joint>
  
  <!-- IMU -->
  <joint name="base_link_to_imu" type="fixed">
    <parent link="base_link"/>
    <child link="imu_link"/>
    <origin xyz="${imu_x} ${imu_y} ${imu_z}" 
            rpy="${imu_roll} ${imu_pitch} ${imu_yaw}"/>
  </joint>

</robot>
